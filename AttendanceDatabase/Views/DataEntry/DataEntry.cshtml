@model List<Category>

@{
    ViewData["Title"] = "Enter Attendance";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

<h2 class="text-center">Enter Attendance</h2>

<!-- Display Selected Date -->
<h3 class="text-center">Selected Date: @ViewBag.SelectedDate</h3>

<br/>

<form asp-action="SaveAttendance" method="post">
    <div class="category-container">
        @for (int i = 0; i < Model.Count(); i++)
        {
            <div class="category-box">
                <div class="category-header d-flex align-items-center">
                    <button type="button" class="actionClass mr-2" onclick="toggleCategory(@i)">
                        <i class="fas fa-chevron-right"></i>
                    </button>
                    <h3 class="mb-0">@Model[i].Name</h3>

                    <label class="flag-checkbox ml-auto">
                        <input type="checkbox" asp-for="@Model[i].Flagged" />
                        <span>Flagged</span>
                    </label>
                </div>

                <div class="category-details" id="category-@i">
                    <input type="hidden" asp-for="@Model[i].Id" />

                    <table class="table">
                        <thead>
                            <tr>
                                <th>Tag Name</th>
                                <th>Attendance Count</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int j = 0; j < Model[i].Tags.Count(); j++)
                            {
                                <tr>
                                    <td>
                                        <input type="hidden" asp-for="@Model[i].Tags[j].Id" />
                                        @Model[i].Tags[j].TagName
                                    </td>
                                    <td>
                                        <div class="attn-counter">
                                            <button type="button" class="attn-btn decrement" onclick="changeCount(this, -1)">−</button>
                                            <input asp-for="@Model[i].Tags[j].AttnCnt" type="number" min="0" class="attn-input" />
                                            <button type="button" class="attn-btn increment" onclick="changeCount(this, 1)">+</button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>

    <input type="submit" class="CalendarEnter" value="Save Data and Return to Calendar" />
</form>

<style>
    .toggle-btn {
        font-size: 2.5rem; /* Bigger plus/minus */
        padding: 0.4rem 0.8rem;
        cursor: pointer;
    }

    .category-details {
        display: none; /* Ensure it's hidden initially */
    }
</style>

<script>
    function toggleCategory(index) {
        var details = document.getElementById('category-' + index);

        var btn = event.target.closest("button");

        var icon = btn.querySelector("i");

        var isHidden = window.getComputedStyle(details).display === "none";

        if (isHidden) {
            details.style.display = "block";
            icon.classList.remove("fa-chevron-right");
            icon.classList.add("fa-chevron-down");
        } else {
            details.style.display = "none";
            icon.classList.remove("fa-chevron-down");
            icon.classList.add("fa-chevron-right");
        }
    }

    function changeCount(btn, delta) {
        const input = btn.parentElement.querySelector('input[type="number"]');
        const current = parseInt(input.value || 0);
        const min = parseInt(input.min || 0);
        const newValue = Math.max(current + delta, min);
        input.value = newValue;
    }
</script>

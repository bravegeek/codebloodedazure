@{
}
@model AttendanceDatabase.Models.Account

@{
    ViewData["Title"] = "Login";
}


<head>

</head>
<body class="RP_CreateForm">
    <h1 class="text-center">MOCA Attendance Database</h1>

    <form id="loginForm" asp-action="Login" asp-controller="Login" method="post" style="text-align: center;">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div style="margin: 0 auto; width: fit-content;">
            <label asp-for="Username" style="display: block; text-align: center; margin-bottom: 5px;"></label>
            <input id="loginInput" asp-for="Username" style="display: block; margin: 0 auto 15px auto;" />
        </div>
        <br />
        <div style="margin: 0 auto; width: fit-content;">
            <label asp-for="Password" style="display: block; text-align: center; margin-bottom: 5px;"></label>
            <input id="loginInput" asp-for="Password" type="password" style="display: block; margin: 0 auto;" />
        </div>

        <br />

        <button type="submit" class="RP_Add">Login</button>
    </form>



</body>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
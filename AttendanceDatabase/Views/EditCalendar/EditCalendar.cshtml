@{
    ViewData["Title"] = "Select a Date";
}

<h2>Select a Date</h2>

<form asp-action="SubmitDate" method="post">
    <div>
        <label for="selectedDate">Choose a date:</label>
        <input type="date" id="selectedDate" name="selectedDate" value="@DateTime.Today.ToString("yyyy-MM-dd")" required />
    </div>
    <button type="submit">Submit</button>
</form>

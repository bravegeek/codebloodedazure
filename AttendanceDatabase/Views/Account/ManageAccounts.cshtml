@model IEnumerable<AttendanceDatabase.Models.Account>

@{
    ViewData["Title"] = "ManageAccounts";
}

<h1>ManageAccounts</h1>

<p>
    <form asp-controller="Account" asp-action="Create">
        <input type="submit" class="btn btn-primary" value="Create New">
    </form>
</p>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Username)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Password)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().FirstName)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().role)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Username)</td>
                    <td>@Html.DisplayFor(modelItem => item.Password)</td>
                    <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                    <td>@Html.DisplayFor(modelItem => item.role)</td>
                    <td>
                        <form asp-action="Edit" asp-controller="Account" asp-route-itemid="@item.Id" method="post">
                            <input type="submit" class="btn btn-primary" value="Edit">
                        </form>
                        @*<a href="javascript:void(0);" onclick="confirmDelete()">Delete</a>
                        <form id="delete-form-@item.Id" asp-controller="Account" asp-action="Delete" method="post">
                         <input type="submit" name="id" value="@item.Id">
                            </form>*@
                        @*<form method="post" asp-action="Delete">
                            <input asp-for=@item.Id hidden />
                            <input type="submit" class="btn btn-danger" value="Delete" />
                        </form>*@
                        <form asp-action="Delete" asp-controller="Account" asp-route-itemid="@item.Id" method="post">
                            <button type="submit" class="btn btn-danger"
                            onclick="return confirm('Are you sure you want to delete account: @item.Username')">
                                Delete
                            </button>
                        </form>
                    
                          
                       
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
}
else
{
    <p>No accounts available.</p>
}
<a asp-action="Admin_Index" asp-controller="Home">Back to Menu</a>

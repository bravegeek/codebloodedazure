@model List<AttendanceDatabase.Models.EventAttendanceRecord>

<form>
    <button type="submit" class="RP_backBtn" asp-controller="Menus" asp-action="MainMenu">Back</button>
</form>
<br />

<h2>Add New Event</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div style="color: green;">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div style="color: red;">@TempData["ErrorMessage"]</div>
}

<form asp-action="Create" method="post">
    <div>
        <label for="EventName">Event Name:</label>
        <input type="text" id="EventName" name="eventName" required />
    </div>
    <div>
        <label for="Date">Date:</label>
        <input type="date" id="Date" name="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
    </div>
    <div>
        <label>Category Type:</label>
        <input type="checkbox" id="Event" name="eventType" value="true" /> Event
        <input type="checkbox" id="Program" name="program" value="true" /> Program
        <input type="checkbox" id="Cafe" name="cafe" value="true" /> Cafe Visit
    </div>
    <div>
        <label for="Tags">Tags:</label>
        <input type="text" id="Tags" name="tags" />
    </div>
    <div>
        <label for="NumberOfWeeks">Number of Weeks:</label>
        <input type="number" id="NumberOfWeeks" name="numberOfWeeks" min="1" value="1" required />
    </div>

    <button type="submit" class="RP_submitCatBtn">Add Event</button>
</form>